generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Entry {
  id        String    @id @default(uuid())
  title     String
  type      EntryType
  director  String
  budget    Float
  location  String
  duration  Int
  year      Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([title])
  @@index([type])
}

enum EntryType {
  MOVIE
  TV_SHOW
}
